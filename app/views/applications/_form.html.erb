<%= form_for [@user, @application] do |f|  %>
  <div class="form-group">
    <%= f.label :name, 'App Name:' %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter App Name Here..." %>
  </div>
  <div class="form-group">
    <%= f.label :url, "URL:" %>
    <%= f.text_field :url, class: 'form-control', placeholder: "Enter Your Application's URL..." %>
  </div>
  <div class="form-group">
    <%= f.submit "Register App" , class: "btn btn-success" %>
  </div>
<% end %>
